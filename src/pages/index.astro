	.descripcionyfoto {
		flex-direction: row;
		display: flex;
		justify-content: center;
		flex-wrap: wrap;
	}

	.profile_picture {
		height: 60vh;
		width: auto;
		min-width: 100px;
		max-height: 1062px;
		max-width: fit-content;
		margin: 3vw;

		display: block;
	}
	.profile_picture img {
		height: auto;
		width: auto;
		filter: contrast(110%) grayscale(60%) saturate(200%) hue-rotate(-10deg)
			drop-shadow(0px 0px 30px rgba(147, 221, 255, 0.788) );
		border-radius: 50vh;
		image-rendering: -webkit-optimize-contrast;
		max-width: 100%;
		max-height: 100%;
		border-width: 5px;
		border-style: double;
		
	}

	.redes{
		display: flex;
		justify-content: center;
		align-items: center;
		flex-wrap: wrap;
		height: 15vh;
		width: 70vw;
	}

	.red{
		border-color: rgba(79,0,255,1);
		height: 80px;
		border-radius: 10px;
		border-width: 5px;
		width: 30%;
		margin: 1%;
		display: flex;
		align-items: center;
		flex-wrap: nowrap;
		justify-content: space-between;
		filter: contrast(110%) grayscale(60%) saturate(200%)
			drop-shadow(0px 0px 10px rgb(76, 0, 255));
	}

	.red a{
		width: 100%;
		align-items: center;
		flex-wrap: nowrap;
		justify-content: space-between;
		display: flex;
	}

	.red a p{
		width: fit-content;
		font-family:'Ubuntu Mono',monospace; 
		font-weight: bold;
		font-style: italic;
		margin: auto;
	}

	.logo{
		height: 50px;
		width: 50px;
		margin: 10px;
	}

	.logo img{
		color: rgb(255, 255, 255);
		filter: invert(14%) sepia(83%) saturate(7462%) hue-rotate(261deg) brightness(92%) contrast(139%);
		
	}

	.duo{
		border-width: 2px;
		border-radius: 10px;
		border-color: rgba(79,0,255,1);
	}

	.descripcion_profesional {
		display: inline;
		float: right;
		width: 70%;
		margin: 3vw;
		align-self: center;
		font-family: 'Ubuntu Mono',monospace;
		color: #f4fdfd;

	}

	@media (min-height: 100vw) {
		.profile_picture {
			height: fit-content;
		}
		.descripcion_profesional {
			width: 80%;
		}

		.header-placeholder{
			display: none;
		}

		.iconos{
			width: 80vw;
		}

	}

	.iconos{
		flex-wrap: wrap;
	}

	.experiencia {
		margin-right: auto;
		margin-left: auto;
		display: flex;
		justify-content: center;
		align-items: center;
		flex-wrap: wrap;
	}

