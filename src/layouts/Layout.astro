---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/iconpag.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<script >import '@fontsource/paytone-one';import '@fontsource/ubuntu-mono/400.css'; import '@fontsource/ubuntu-mono/700.css';</script>
	</head>
	<body>
		<slot />
	</body>
</html>
<style is:global>

	:root {
		--accent: 136, 58, 234;
		--accent-light: 224, 204, 250;
		--accent-dark: 49, 10, 101;
		--accent-gradient: linear-gradient(
			45deg,
			rgb(var(--accent)),
			rgb(var(--accent-light)) 30%,
			white 60%
		);
	}
	html {
		font-family: 'Paytone One', sans-serif;

		background: linear-gradient(180deg, rgb(0, 1, 15) 0%, rgb(5, 1, 59) 85%, #403370 100%);
		
		background-size: 100%;
	}

	body{
		min-height: 100vh;
	}
	
		
</style>
